
@model WeddingAttendee

@{
    Layout = "_Layout";
}

    <form method="post">

            <p><label asp-for="UserName"></label></p>
            <input asp-for="UserName" placeholder="Kullanıcı Adı">
            <span asp-validation-for="UserName"></span>

            <p><label asp-for="Email"></label></p>
            <input asp-for="Email" placeholder="E-Posta">
