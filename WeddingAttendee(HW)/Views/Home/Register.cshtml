            <p><label asp-for="HowManyPeople"></label></p>
            <input asp-for="HowManyPeople" placeholder="Kaç Kişi Katılacaksınız?">

            <p><label asp-for="isComeWedding"></label></p>
            <input asp-for ="isComeWedding" placeholder="Düğüne geliyor mu" />
